// Mostrar os impares entre 10 e 80 o a somat√≥ria deles

//Comando for

#include <iostream>

using namespace std;

int main (int argc, char** argv){
	
	int i, soma=0, impar;
	cout << "Soma Impar 10 ate 80" << endl;
	for (i=10; i<=80; i++){
		if (i%2 !=0 ){
			cout << i << " ";
			soma += i;
		}
	}
	cout << "\nSoma Impar= " << soma << endl;
	return 0;
}

//Comando While

#include <iostream>

using namespace std;

int main (int argc, char** argv){
	
	int i=10, soma=0, impar;
	cout << "Soma Impar 10 ate 80" << endl;
	while (i<=80){
		if (i%2 !=0 ){
			cout << i << " ";
			soma += i;
		}
		i ++;
	}
	cout << "\nSoma Impar= " << soma << endl;
	return 0;
}

//Comando Do

#include <iostream>

using namespace std;

int main (int argc, char** argv){
	
	int i=10, soma=0, impar;
	cout << "Soma Impar 10 ate 80" << endl;
	
	do{
		if (i%2 != 0 ){
			cout << i << " ";
			soma += i;
		}
		i ++;
	}while (i <= 80);
	
	cout << "\nSoma Impar= " << soma << endl;
	return 0;
}
