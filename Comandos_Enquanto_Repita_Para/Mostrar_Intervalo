//Mostrar o intervalo de 1 a 50

//Comando For

#include <iostream>

using namespace std;

int main (int argc, char** argv){


	int i;
	
	for (i=0; i<= 50; i++){
		cout << i << " ";
	}
	
	return 0;
}


//Comando While

#include <iostream>

using namespace std;

int main (int argc, char** argv){


	int i;
	
	while (i<=50){
		cout << i << " ";
		i ++;
	}
	
	return 0;
}

//Comando Do-While

#include <iostream>

using namespace std;

int main (int argc, char** argv){


	int i;
	
	do{
		cout << i << " ";
		i ++;
	} while (i <=50);
	
	return 0;
}
