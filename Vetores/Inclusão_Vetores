/* Criar um vetor com 10 elementos: 
(a) Inserir os elementos de 0 a 9 no vetor
(b) Após a inserção, somente após a inserção mostrar o vetor */

#include <iostream>

using namespace std;

int main(int argc, char** argv) {
	
	int vetor[10];
	int n=0;
	
	cout << "inserindo dados no vetor\n";
	for (n=0; n<=9; n=n+1){
		cin >> vetor[n];
	}
	for (n=0; n<=9; n=n+1){
		cout << "vetor completo: " << vetor[n] << endl;
	}
	return 0;
}